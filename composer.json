{
    "name": "assegaiphp/core",
    "description": "A progressive PHP framework for building efficient and scalable server-side applications.",
    "type": "library",
    "require-dev": {
        "assegaiphp/orm": ">=0.2",
        "codeception/codeception": "^5.0",
        "codeception/module-phpbrowser": "*",
        "codeception/module-asserts": "*",
        "phpstan/phpstan": "^1.11"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Assegai\\Core\\": "src/"
        },
        "files": ["src/Util/Definitions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Assegai\\Orm\\": "../orm/src/",
            "Assegai\\Form\\": "../forms/src/"
        }
    },
    "authors": [
        {
            "name": "Andrew Masiye",
            "email": "amasiye313@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "psr/log": "^3.0.0",
        "vlucas/phpdotenv": "^5.4",
        "twig/twig": "^3.0",
        "ext-fileinfo": "*",
        "assegaiphp/validation": "^0.3.1",
        "assegaiphp/util": "^0.4.2",
        "assegaiphp/forms": "^0.4.4"
    },
    "scripts": {
        "test": "codecept run unit",
        "analyze": "vendor/bin/phpstan analyse src tests/Unit --level 8"
    }
}
